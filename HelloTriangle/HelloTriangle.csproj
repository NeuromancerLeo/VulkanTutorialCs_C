<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Platforms>x64</Platforms>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <Target Name="CopyNativeDLL_debug" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <ItemGroup>
      <DLLSource Include="../NativeLib/build/mingw/x64/debug/*.dll"></DLLSource>
    </ItemGroup>
    <Copy SourceFiles="@(DLLSource)"
          DestinationFolder="$(OutputPath)"
          SkipUnchangedFiles="True"/>
  </Target>

  <Target Name="CopyNativeDLL_release" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <ItemGroup>
      <DLLSource Include="../NativeLib/build/mingw/x64/release/*.dll"></DLLSource>
    </ItemGroup>
    <Copy SourceFiles="@(DLLSource)/*.dll"
          DestinationFolder="$(OutputPath)" 
          SkipUnchangedFiles="True"/>
  </Target>

</Project>
